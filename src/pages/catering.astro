---
import Layout from '../layouts/Layout.astro';
import Header from '../../components/ui/Header.jsx';
import Footer from '../../components/ui/Footer.jsx';
import CateringForm from '../../components/catering/CateringForm.jsx';
import { getTranslations } from '../../i18n/utils';

const locale = 'ar'; // Default locale is Arabic
const t = getTranslations(locale);
---

<Layout title="خدمة التموين - النيل دوز كافيه" lang={locale}>
  <Header locale={locale} client:load />
  
  <main>
    <!-- Catering Hero Section -->
    <section class="bg-nile-blue text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-4">{t.catering.title}</h1>
        <p class="text-xl max-w-3xl mx-auto">{t.catering.description}</p>
      </div>
    </section>
    
    <!-- Catering Menu Preview -->
    <section class="py-12 bg-nile-beige bg-opacity-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center text-nile-blue">قائمة التموين</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Sample catering packages -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-nile-blue flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white">الباقة الأساسية</h3>
            </div>
            <div class="p-6">
              <ul class="space-y-2 mb-6">
                <li>• مشروبات ساخنة (شاي، قهوة)</li>
                <li>• عصائر طازجة</li>
                <li>• معجنات متنوعة</li>
                <li>• حلويات سودانية تقليدية</li>
              </ul>
              <p class="text-nile-blue font-bold text-xl">مناسبة لـ 10-20 شخص</p>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-nile-blue flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white">الباقة المميزة</h3>
            </div>
            <div class="p-6">
              <ul class="space-y-2 mb-6">
                <li>• مشروبات ساخنة (شاي، قهوة)</li>
                <li>• مشروبات باردة (موهيتو، سموذي)</li>
                <li>• معجنات متنوعة</li>
                <li>• حلويات سودانية تقليدية</li>
                <li>• فطائر سودانية</li>
              </ul>
              <p class="text-nile-blue font-bold text-xl">مناسبة لـ 20-50 شخص</p>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-nile-blue flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white">الباقة الفاخرة</h3>
            </div>
            <div class="p-6">
              <ul class="space-y-2 mb-6">
                <li>• مشروبات ساخنة (شاي، قهوة)</li>
                <li>• مشروبات باردة (موهيتو، سموذي)</li>
                <li>• مشروبات مميزة (كركديه، تمر هندي)</li>
                <li>• معجنات متنوعة</li>
                <li>• حلويات سودانية تقليدية</li>
                <li>• فطائر سودانية</li>
                <li>• مديدة بأنواعها</li>
              </ul>
              <p class="text-nile-blue font-bold text-xl">مناسبة لـ 50+ شخص</p>
            </div>
          </div>
        </div>
        
        <p class="text-center mt-8 text-gray-700">يمكن تخصيص الباقات حسب احتياجاتك. يرجى ملء النموذج أدناه للحصول على عرض سعر مخصص.</p>
      </div>
    </section>
    
    <!-- Catering Form -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center text-nile-blue">طلب خدمة التموين</h2>
        <CateringForm locale={locale} client:load />
      </div>
    </section>
  </main>
  
  <Footer locale={locale} t={t} />
</Layout>
