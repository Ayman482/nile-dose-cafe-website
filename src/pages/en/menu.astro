---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/ui/Header.jsx';
import Footer from '../../../components/ui/Footer.jsx';
import EnhancedMenuDisplay from '../../components/menu/EnhancedMenuDisplay.jsx';
import { getTranslations } from '../../../i18n/utils';

const locale = 'en'; // English locale
const t = getTranslations(locale);

// Import menu data
import menuData from '../../../../menu_data.json';
---

<Layout title="Menu - Nile Dose Cafe" lang={locale}>
  <Header locale={locale} client:load />
  
  <main>
    <!-- Menu Hero Section -->
    <section class="bg-nile-blue text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-4">{t.home.menu.title}</h1>
        <p class="text-xl max-w-3xl mx-auto">{t.home.menu.description}</p>
      </div>
    </section>
    
    <!-- Menu Display -->
    <section class="py-12">
      <EnhancedMenuDisplay locale={locale} menuData={menuData} client:load />
    </section>
  </main>
  
  <Footer locale={locale} t={t} />
</Layout>
