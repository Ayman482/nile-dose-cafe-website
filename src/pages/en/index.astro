---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/ui/Header.jsx';
import Footer from '../../components/ui/Footer.jsx';
import { getTranslations } from '../../i18n/utils';

const locale = 'en'; // English locale
const t = getTranslations(locale);
---

<Layout title="Nile Dose Cafe - Sudanese Cafe with a Global Flavor" lang={locale}>
  <Header locale={locale} client:load />
  
  <main>
    <!-- Hero Section -->
    <section class="bg-nile-blue text-white py-16">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">{t.home.hero.title}</h1>
        <p class="text-xl mb-8 max-w-3xl mx-auto">{t.home.hero.subtitle}</p>
        <a href="/en/menu" class="bg-nile-beige text-nile-blue px-6 py-3 rounded-lg font-bold hover:bg-yellow-300 transition-colors">
          {t.home.hero.cta}
        </a>
      </div>
    </section>
    
    <!-- About Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 mb-8 md:mb-0">
            <img src="/images/Logo.png" alt="Nile Dose Cafe" class="max-w-sm mx-auto">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-3xl font-bold mb-4 text-nile-blue">{t.home.about.title}</h2>
            <p class="text-gray-700 mb-6">{t.home.about.description}</p>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Menu Preview Section -->
    <section class="py-16 bg-nile-beige bg-opacity-20">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl font-bold mb-4 text-nile-blue">{t.home.menu.title}</h2>
        <p class="text-gray-700 mb-8 max-w-3xl mx-auto">{t.home.menu.description}</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-12">
          <!-- Menu Category Cards will be dynamically generated -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/HotHibiscus.jpeg" alt="Hot Beverages" class="w-full h-48 object-cover">
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-nile-blue">{t.menu.categories.hotBeverage}</h3>
              <a href="/en/menu#hot-beverages" class="text-blue-600 hover:underline">{t.home.menu.viewAll}</a>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/IMG_2874.PNG" alt="Cold Beverages" class="w-full h-48 object-cover">
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-nile-blue">{t.menu.categories.coldBeverage}</h3>
              <a href="/en/menu#cold-beverages" class="text-blue-600 hover:underline">{t.home.menu.viewAll}</a>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <img src="/images/NileDose Cafe-125.jpg" alt="Desserts" class="w-full h-48 object-cover">
            <div class="p-6">
              <h3 class="text-xl font-bold mb-2 text-nile-blue">{t.menu.categories.desert}</h3>
              <a href="/en/menu#desserts" class="text-blue-600 hover:underline">{t.home.menu.viewAll}</a>
            </div>
          </div>
        </div>
        
        <a href="/en/menu" class="inline-block mt-12 bg-nile-blue text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">
          {t.home.menu.viewAll}
        </a>
      </div>
    </section>
    
    <!-- Catering Section -->
    <section class="py-16 bg-white">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row items-center">
          <div class="md:w-1/2 mb-8 md:mb-0">
            <img src="/images/NileDose Cafe-147.jpg" alt="Catering Services" class="max-w-sm mx-auto rounded-lg shadow-lg">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-3xl font-bold mb-4 text-nile-blue">{t.home.catering.title}</h2>
            <p class="text-gray-700 mb-6">{t.home.catering.description}</p>
            <a href="/en/catering" class="bg-nile-blue text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">
              {t.home.catering.cta}
            </a>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Loyalty Program Section -->
    <section class="py-16 bg-nile-beige bg-opacity-20">
      <div class="container mx-auto px-4">
        <div class="flex flex-col md:flex-row-reverse items-center">
          <div class="md:w-1/2 mb-8 md:mb-0">
            <img src="/images/NileDose Cafe-081.jpg" alt="Loyalty Program" class="max-w-sm mx-auto rounded-lg shadow-lg">
          </div>
          <div class="md:w-1/2">
            <h2 class="text-3xl font-bold mb-4 text-nile-blue">{t.home.loyalty.title}</h2>
            <p class="text-gray-700 mb-6">{t.home.loyalty.description}</p>
            <a href="/en/loyalty" class="bg-nile-blue text-white px-6 py-3 rounded-lg font-bold hover:bg-blue-700 transition-colors">
              {t.home.loyalty.cta}
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  
  <Footer locale={locale} t={t} />
</Layout>
