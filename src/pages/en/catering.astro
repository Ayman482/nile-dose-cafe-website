---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/ui/Header.jsx';
import Footer from '../../components/ui/Footer.jsx';
import CateringForm from '../../components/catering/CateringForm.jsx';
import { getTranslations } from '../../../i18n/utils';

const locale = 'en'; // English locale
const t = getTranslations(locale);
---

<Layout title="Catering Services - Nile Dose Cafe" lang={locale}>
  <Header locale={locale} client:load />
  
  <main>
    <!-- Catering Hero Section -->
    <section class="bg-nile-blue text-white py-12">
      <div class="container mx-auto px-4 text-center">
        <h1 class="text-4xl font-bold mb-4">{t.catering.title}</h1>
        <p class="text-xl max-w-3xl mx-auto">{t.catering.description}</p>
      </div>
    </section>
    
    <!-- Catering Menu Preview -->
    <section class="py-12 bg-nile-beige bg-opacity-20">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center text-nile-blue">Catering Menu</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <!-- Sample catering packages -->
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-nile-blue flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white">Basic Package</h3>
            </div>
            <div class="p-6">
              <ul class="space-y-2 mb-6">
                <li>• Hot beverages (tea, coffee)</li>
                <li>• Fresh juices</li>
                <li>• Assorted pastries</li>
                <li>• Traditional Sudanese desserts</li>
              </ul>
              <p class="text-nile-blue font-bold text-xl">Suitable for 10-20 people</p>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-nile-blue flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white">Premium Package</h3>
            </div>
            <div class="p-6">
              <ul class="space-y-2 mb-6">
                <li>• Hot beverages (tea, coffee)</li>
                <li>• Cold beverages (mojitos, smoothies)</li>
                <li>• Assorted pastries</li>
                <li>• Traditional Sudanese desserts</li>
                <li>• Sudanese Fateer</li>
              </ul>
              <p class="text-nile-blue font-bold text-xl">Suitable for 20-50 people</p>
            </div>
          </div>
          
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="h-48 bg-nile-blue flex items-center justify-center">
              <h3 class="text-2xl font-bold text-white">Deluxe Package</h3>
            </div>
            <div class="p-6">
              <ul class="space-y-2 mb-6">
                <li>• Hot beverages (tea, coffee)</li>
                <li>• Cold beverages (mojitos, smoothies)</li>
                <li>• Signature drinks (Hibiscus, Tamarind)</li>
                <li>• Assorted pastries</li>
                <li>• Traditional Sudanese desserts</li>
                <li>• Sudanese Fateer</li>
                <li>• Madida varieties</li>
              </ul>
              <p class="text-nile-blue font-bold text-xl">Suitable for 50+ people</p>
            </div>
          </div>
        </div>
        
        <p class="text-center mt-8 text-gray-700">Packages can be customized to your needs. Please fill out the form below to get a custom quote.</p>
      </div>
    </section>
    
    <!-- Catering Form -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold mb-8 text-center text-nile-blue">Request Catering Service</h2>
        <CateringForm locale={locale} client:load />
      </div>
    </section>
  </main>
  
  <Footer locale={locale} t={t} />
</Layout>
