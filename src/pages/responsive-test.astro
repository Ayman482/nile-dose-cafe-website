---
import Layout from '../layouts/Layout.astro';
import '../styles/layout.css';

// Import global styles
import '../styles/global.css';
---

<style>
  /* Add any page-specific styles here */
  .main-layout {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
  
  .main-content {
    flex: 1;
  }
</style>

<Layout title="Nile Dose Cafe">
  <div class="main-layout">
    <main class="main-content">
      <div class="responsive-container">
        <h1 class="text-4xl font-bold text-nile-blue mt-8 mb-4">Responsive Template Test</h1>
        
        <div class="card p-6 mb-8">
          <h2 class="text-2xl font-bold mb-4">Responsive Grid Layout</h2>
          <div class="responsive-grid">
            <div class="bg-nile-blue text-white p-4 rounded">Item 1</div>
            <div class="bg-nile-beige text-nile-blue p-4 rounded">Item 2</div>
            <div class="bg-nile-blue text-white p-4 rounded">Item 3</div>
            <div class="bg-nile-beige text-nile-blue p-4 rounded">Item 4</div>
            <div class="bg-nile-blue text-white p-4 rounded">Item 5</div>
            <div class="bg-nile-beige text-nile-blue p-4 rounded">Item 6</div>
          </div>
        </div>
        
        <div class="card p-6 mb-8">
          <h2 class="text-2xl font-bold mb-4">Responsive Typography</h2>
          <h1 class="responsive-heading mb-2">Heading 1</h1>
          <h2 class="responsive-subheading mb-2">Heading 2</h2>
          <p class="mb-4">Regular paragraph text that should be readable on all device sizes.</p>
          <button class="btn-primary touch-target">Primary Button</button>
          <button class="btn-secondary touch-target ml-4">Secondary Button</button>
        </div>
        
        <div class="card p-6 mb-8">
          <h2 class="text-2xl font-bold mb-4">Responsive Form</h2>
          <form>
            <div class="mb-4">
              <label class="block mb-2">Name</label>
              <input type="text" class="form-control" />
            </div>
            <div class="mb-4">
              <label class="block mb-2">Email</label>
              <input type="email" class="form-control" />
            </div>
            <div class="mb-4">
              <label class="block mb-2">Message</label>
              <textarea class="form-control" rows="4"></textarea>
            </div>
            <button type="submit" class="btn-primary">Submit</button>
          </form>
        </div>
        
        <div class="card p-6 mb-8">
          <h2 class="text-2xl font-bold mb-4">Responsive Card Grid</h2>
          <div class="card-grid">
            <div class="bg-white shadow-md rounded-lg p-4">
              <h3 class="text-xl font-bold mb-2">Card 1</h3>
              <p>This is a responsive card that will adjust based on screen size.</p>
            </div>
            <div class="bg-white shadow-md rounded-lg p-4">
              <h3 class="text-xl font-bold mb-2">Card 2</h3>
              <p>This is a responsive card that will adjust based on screen size.</p>
            </div>
            <div class="bg-white shadow-md rounded-lg p-4">
              <h3 class="text-xl font-bold mb-2">Card 3</h3>
              <p>This is a responsive card that will adjust based on screen size.</p>
            </div>
            <div class="bg-white shadow-md rounded-lg p-4">
              <h3 class="text-xl font-bold mb-2">Card 4</h3>
              <p>This is a responsive card that will adjust based on screen size.</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</Layout>
